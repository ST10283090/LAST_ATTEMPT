@model List<LAST_ATTEMPT.Models.Transaction>

@{
    ViewData["Title"] = "Order Processing";
}

<h1>Order Processing</h1>

@if (Model == null || !Model.Any())
{
    <p>Order has been submitted, and will be sent through shortly...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.UserId</td>
                    <td>@order.Product?.Prod_Name</td>
                    <td>@order.Quantity</td>
                    <td>$@order.TotalAmount</td>
                    <td>@order.Processed</td>
                </tr>
            }
        </tbody>
    </table>
}

